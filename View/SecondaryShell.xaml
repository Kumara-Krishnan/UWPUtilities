<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPUtilities.View">

    <Style TargetType="local:SecondaryShell" BasedOn="{StaticResource DefaultSecondaryShellStyle}"/>

    <Style x:Key="DefaultSecondaryShellStyle" TargetType="local:SecondaryShell">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SecondaryShell">
                    <Frame x:Name="PART_FRAME"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
